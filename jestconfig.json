{
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "setupFilesAfterEnv": ["jest-extended", "jest-each"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": { "@/(.*)": "<rootDir>/src/$1" }
}
